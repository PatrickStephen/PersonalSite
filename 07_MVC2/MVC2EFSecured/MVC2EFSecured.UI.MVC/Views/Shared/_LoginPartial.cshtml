@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <li>
            @Html.ActionLink("Hello!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    }
}
else
{
    <li><a href="@Url.Action("Register","Account")" id="registerLink">REGISTER <i class="fa fa-user-plus" aria-hidden="true"></i></a></li>
    
    <li><a href="@Url.Action("Login","Account")" id="loginLink">LOGIN <i class="fa fa-sign-in" aria-hidden="true"></i></a></li>
}
