        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger float-left" })

        <input type="submit" value="Save" class="btn btn-success float-right" />
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
