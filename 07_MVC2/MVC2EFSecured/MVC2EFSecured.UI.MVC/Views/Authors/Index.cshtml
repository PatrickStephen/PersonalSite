@model IEnumerable<MVC2EFSecured.DATA.EF.Author>

@{
    ViewBag.Title = "Authors";
}

<h2>@ViewBag.Title</h2>
<div id="indexWrapper" style="max-width: 660px">
    <p>
        @Html.ActionLink("Add Author", "Create",null, new { @class="btn btn-success" })
    </p>
    <table class="table" style="font-size: 1.25em;">
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>*@
            <th class="col-md-3">
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.City)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th class="col-md-3"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>*@
                <td>
                    @Html.ActionLink(item.FullName, "Details", new { id=item.AuthorID})
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.ZipCode)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td class="text-right">
                    @Html.ActionLink(" ", "Edit", new { id = item.AuthorID }, new { @class="btn btn-primary fa fa-pencil" })

                    @Html.ActionLink(" ", "Delete", new { id = item.AuthorID }, new { @class = "btn btn-danger fa fa-trash" })
                </td>
            </tr>
        }

    </table>
</div>